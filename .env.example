# ===========================================
# TRAFFIC MONITORING SYSTEM ENVIRONMENT CONFIG
# ===========================================
# Copy this file to .env and update with your actual values

# ===========================================
# BACKEND CONFIGURATION
# ===========================================

# JWT Authentication (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-in-production-2024-traffic-monitoring-system
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=traffic_monitoring

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# API URLs (Auto-detected based on environment)
# For localhost development
LOCAL_API_BASE_URL=http://localhost:8000
LOCAL_WS_BASE_URL=ws://localhost:8000

# For production deployment (update with your actual URLs)
PRODUCTION_API_BASE_URL=https://your-app-name.onrender.com
PRODUCTION_WS_BASE_URL=wss://your-app-name.onrender.com

# ===========================================
# EXTERNAL SERVICES (Optional)
# ===========================================

# Render Deployment URL (update when deployed)
RENDER_APP_URL=https://your-app-name.onrender.com

# Vercel Frontend URL (update when deployed)
VERCEL_APP_URL=https://your-app-name.vercel.app

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Debug Mode
DEBUG=true

# Log Level
LOG_LEVEL=INFO

# ===========================================
# AI/ML CONFIGURATION
# ===========================================

# YOLOv8 Model Path
YOLO_MODEL_PATH=yolov8n.pt

# Detection Confidence Threshold
CONFIDENCE_THRESHOLD=0.5

# ===========================================
# STREAM CONFIGURATION
# ===========================================

# Maximum concurrent streams
MAX_STREAMS=4

# Stream poll intervals (milliseconds)
STATS_POLL_INTERVAL=2000
STREAM_FRAME_POLL_INTERVAL=1000

# Stream timeout (seconds)
STREAM_TIMEOUT=5

# ===========================================
# VIOLATION THRESHOLDS
# ===========================================

# Speed violation threshold (km/h)
SPEED_LIMIT=60

# Unsafe following distance (meters)
MIN_FOLLOWING_DISTANCE=2.0

# Lane violation sensitivity
LANE_VIOLATION_THRESHOLD=0.3